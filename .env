# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# Application Configuration
APP_NAME=Snatched It
APP_VERSION=1.0.0

# Trust proxy settings (for load balancers)
TRUST_PROXY=false

# Request size limits
MAX_REQUEST_SIZE=10mb

# Static file caching
STATIC_MAX_AGE=86400

# Security Configuration
HELMET_ENABLED=true
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000

# Database Configuration (for future use)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=snatched_it
DB_USER=your_username
DB_PASSWORD=your_password

# API Keys (for future integrations)
GOOGLE_SHOPPING_API_KEY=your_google_api_key
AMAZON_API_KEY=your_amazon_api_key

# Email Configuration (for future use)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# JWT Secret (for future authentication)
JWT_SECRET=your_very_secure_random_string_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your_session_secret_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Scraping Configuration
ENABLE_SCHEDULED_SCRAPING=true
SCRAPING_RATE_LIMIT=2
MAX_CONCURRENT_SCRAPING=3
SCRAPING_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=5000

# Performance Configuration
ENABLE_COMPRESSION=true
CACHE_STATIC_ASSETS=true
STATIC_CACHE_MAX_AGE=86400
API_CACHE_TTL=300

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PRICE_ALERTS=true
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_FEATURES=false
ENABLE_ADMIN_PANEL=false
MAINTENANCE_MODE=false

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health

# Monitoring Configuration
APM_ENABLED=false

# Clustering Configuration
CLUSTER_ENABLED=false
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# Price Alert Configuration (for future use)
# SENDGRID_API_KEY=your_sendgrid_key
